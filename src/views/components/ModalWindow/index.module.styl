.modalWrapper
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    //z-index 1
    background: rgba(9, 30, 66, 0.54);
.modalWindow
    z-index 20
    background white
    border-radius 5px
    padding 5vmin
    display grid
    position absolute          
    top 50%                       
    transform translate(50%, -50%)
    &CloseBtn
        position absolute
        top 5px
        right 5px
        outline none
        cursor pointer
        border none
        background white
        &:before, &:after
            position absolute
            content ''
            display block
            background black
            transform: rotate(45deg)
        &:before
            width 11px
            height 1px
            top 6px
            left 1px
        &:after
            width 1px
            height 11px
    &Input
        background #efefef
        padding 2vmin
        font 1rem/1.4 'Roboto' , sans-serif;
        border none
        outline none
        border-radius 5px 0 0 5px
        &::placeholder
            color #7B7B7B
    &TextArea
        background #efefef
        padding 2vmin
        font 1rem/1.4 'Roboto' , sans-serif;
        border none
        outline none
        border-radius 5px 0 0 5px
        &::placeholder
            color #7B7B7B
    &AddBlock
        display grid
        grid-gap 3vmin
        &Item
            display grid
            grid-gap 1vmin
    &Button
        border none
        outline none
        cursor pointer
        border-radius 5px
        margin-top 10px
        background #3f72af
        transition opacity .3s
        color white
        font 1rem/1.4 'Roboto' , sans-serif;
        width 20vmin
        float right
        &:hover
            opacity 0.7